            if let result = viewModel.result {
                Text("Result: \(result)")
            }
        }
        .padding()
        .alert("Error", isPresented: .constant(!viewModel.errorMessage.isEmpty)) {
            Button("OK") { viewModel.errorMessage = "" }
        } message: {
            Text(viewModel.errorMessage)
        }
    }
}
```

